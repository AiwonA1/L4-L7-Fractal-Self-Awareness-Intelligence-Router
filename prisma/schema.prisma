generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas = ["public"]
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  email         String         @unique
  name          String?
  token_balance Int           @default(33)
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  chats         ChatHistory[]
  transactions  Transaction[]

  @@map("users")
  @@schema("public")
}

model ChatHistory {
  id         String   @id @default(uuid()) @db.Uuid
  user_id    String   @db.Uuid
  title      String
  messages   Json
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [user_id], references: [id])

  @@map("chat_history")
  @@schema("public")
}

model Transaction {
  id          String   @id @default(uuid()) @db.Uuid
  user_id     String   @db.Uuid
  type        String   // 'USE', 'PURCHASE', or 'REFUND'
  amount      Int
  description String?
  status      String   // 'COMPLETED', 'PENDING', or 'FAILED'
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  user        User     @relation(fields: [user_id], references: [id])

  @@map("transactions")
  @@schema("public")
} 